
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Deny all reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for live rooms if they are live
    match /liveRooms/{roomId} {
      allow read: if resource.data.isLive == true;
      // Allow writes only for authenticated users to start/end shows
      allow write: if isAuthenticated();
    }
    
     // Allow public read for live radio shows
    match /radioShows/{showId} {
      allow read: if resource.data.isLive == true;
      allow write: if isAuthenticated(); // For admins
    }
    
    // Allow any authenticated user to create a listener document
    match /liveRooms/{roomId}/listeners/{listenerId} {
        allow create: if isAuthenticated();
        allow delete: if isAuthenticated();
        allow read: if true;
    }

     // Allow any authenticated user to create a listener document for radio
    match /radioShows/{showId}/listeners/{listenerId} {
        allow create: if isAuthenticated();
        allow delete: if isAuthenticated();
        allow read: if true;
    }

    // Allow anyone to read the listener counts
    match /podcastListeners/{roomId} {
      allow read: if true;
      allow write: if false; // Only cloud function can write
    }
    
    match /radioListeners/{showId} {
      allow read: if true;
      allow write: if false; // Only cloud function can write
    }

    // Allow public read for published podcasts
    match /podcasts/{podcastId} {
        allow read: if true;
        allow write: if isAuthenticated(); // For admins
    }

    // Allow public read for radio playlist
    match /radio/{docId} {
      allow read: if true;
      allow write: if isAuthenticated(); // Admins can update playlist
    }

    // Allow authenticated users to manage their own data
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // Example: Allow reads on a public collection
    // match /publicContent/{docId} {
    //  allow read: if true;
    // }
  }
}
